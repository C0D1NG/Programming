import java.util.*

fun main(args: Array<String>) {

    val reader = Scanner(System.`in`)
    print("Enter a number: ")
    val n:Int = reader.nextInt()
    reader.close()
    if (isOddOrEven(n)) println("$n is an even number.") else println("$n is a odd number.")}

fun isOddOrEven(n: Int): Boolean {
    return n % 2 == 0
}